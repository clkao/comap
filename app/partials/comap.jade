section(layout='horizontal', layout-fill='layout-fill')
    material-sidenav.material-sidenav-left.material-whiteframe-z2(component-id='left')
      material-content.material-content-padding(ng-controller='LeftCtrl')
        material-button.material-button-colored(ng-click='close()', hide-md='hide-md')
          | Close Sidenav Left
        material-list
          material-list-item
            .material-tile-content
              .ui.top.attached.progress.successful(ng-style="{width: '28%'}"): .bar
              h2(title="28%") 臺北市 (2358)
          material-list-item
            .material-tile-content
              .ui.top.attached.progress.successful(ng-style="{width: '18%'}"): .bar
              h2(title="18%") 新北市 (2947)
    material-content(layout-fill)
      div(layout='vertical', layout-fill='layout-fill', layout-align='center center')
        material-toolbar.material-theme-green(scroll-shrink)
         .material-toolbar-tools
            h1 {{ county }} / {{ id }}
            h3 {{ data.place_name }}
            h3 {{ data.address }}
            material-button.material-button-raised.material-button-colored.material-theme-red(ng-click='save()') Save
        leaflet(defaults="defaults",center="center",height="320px",width="480px")
        div: material-button.material-button-colored(ng-click='toggleLeft()', hide-md='hide-md') Select
        div(layout='horizontal', layout-fill='layout-fill',flex, layout-align='center')
          material-input-group
            label(for="name") Place Name
            material-input(id="test",type="text",ng-model="osmdata.place_name")
            material-button.material-button-colored(ng-click='find()') Find
            material-whiteframe.selector.material-whiteframe-z2(layout="vertical",layout-align="left center",xng-show="selecting")
              material-content(ng-if="osmdata.nameReults && osmdata.nameResults.length == 0")
                | No results
              material-list(ng-if="osmdata.nameResults")
                material-list-item(ng-repeat="entry in osmdata.nameResults")
                  .material-tile-left
                    img.face(ng-src="{{entry.icon}}")
                    i.circular.icon.zoom.in(ng-click="look(entry)")
                    i.circular.icon.edit(ng-click="edit(entry)")
                    i.circular.icon.checkmark(ng-click="setPlace(entry)",ng-class="{teal: data.osm_id == entry.osm_type + '/' + entry.osm_id}")
                  .material-tile-content
                    h2 {{entry.display_name}}
                    h3 {{entry.type}} / {{entry.osm_type}}/{{entry.osm_id}} / {{entry.place_id}}
          material-input-group
            section(layout="horizontal")
              label(for="address") Address
              material-input(id="test",type="text",ng-model="osmdata.address")
              label(for="house_number") Number
              material-input(id="test",type="text",ng-model="osmdata.house_number",size="6")
            material-content(ng-if="osmdata.addressResults && osmdata.addressResults.length == 0")
              | No results
            material-list(ng-if="osmdata.addressResults")
              material-list-item(ng-repeat="entry in osmdata.addressResults")
                .material-tile-left
                  material-button.material-button-fab(ng-click="look(entry)")
                    i.icon.zoom.in
                .material-tile-content
                  h2 {{entry.display_name}}
                  h3 {{entry.type}} / {{entry.osm_type}}/{{entry.osm_id}} / {{entry.place_id}}

